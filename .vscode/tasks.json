{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Current Go File",
            "type": "shell",
            "command": "go",
            "args": ["run", "${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
} 